<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@drawable/view_style1"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userView_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/profile"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/tv_userView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/userView_image"
        android:layout_marginStart="89dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_userView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_userView_name"
        android:layout_marginTop="42dp"
        android:textStyle="italic"
        android:textSize="14sp"
        android:text="TextView" />


</RelativeLayout>